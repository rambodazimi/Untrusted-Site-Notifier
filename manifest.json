{
  "manifest_version": 3,
  "name": "Untrusted Site Notifier",
  "version": "1.0",
  "description": "Notifies the user when visiting an untrusted website",
  "permissions": [
    "webNavigation",
    "notifications",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "48": "icon.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "icon.png"
    },
    "default_popup": "popup.html"
  }
}
